pipeline {
   agent any

   stages {

      stage('build') {
        steps{      
          sh 'pip install xmlrunner && python3 tests.py'
		  sh 'pip install pytest'
          sh 'pip install pyodbc'
		  sh 'pip install pymssql'
          sh 'pip install pytest-html'
        }
        }
	  stage('test') {
        steps{      
          sh 'pytest .\test_cases.py'
        }
        }

  }
}
